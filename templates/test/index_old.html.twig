{% extends 'base.html.twig' %}

{% block title %}{{controller_name}}{% endblock %}

{% block body %}
<div class="col-md-3  text-center" style="margin-top:15px;">
<a href="{{path('adduser')}}" class="btn btn-primary btn-sm">Add user</a>
</div>
<div class="col-md-8  text-center" style="margin-top:15px; ">
{% for msg in app.flashes('editflash') %}
<div class="alert alert-success text-center">
{{msg}}
</div>
{% endfor %}
</div>

<div class="col-md-8 text-center" style="margin-top:15px;">
{% for msg in app.flashes('deleteflash') %}
<div class="alert alert-danger text-center">
{{msg}}
</div>
{% endfor %}
</div>
<table class="table table-dark">
  <thead class= "thead-dark">
    <tr>
      <th scope="col">S.No.</th>
      <th scope="col">Name</th>
      <th scope="col">User Id</th>
      <th scope="col">Email</th>
      <th scope="col">Mobile</th>
      <th scope="col">City</th>
      <th scope="col">Age</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  {% set i = 1 %}
   {% for data in response %}
   <tr>

   <td> {{i}}</td>
   <td>{{data.name}}</td>
   <td>{{data.id}}</td>
   <td>{{data.email}}</td>
   <td>{{data.mobile}}</td>
   <td>{{data.city}}</td>
   <td>{{data.age}}</td>
   <td>
   <a href="{{ path('delete',{id:data.id}) }}" onclick=" return confirm(' Are you sure you want to delete user  ?')" class="btn btn-danger btn-sm">Delete</a>&nbsp;
   <a href="{{ path('edit',{id:data.id}) }}" class="btn btn-info btn-sm">Edit</a>
   </td>

    </tr>
    {% set i = i+1 %}

   {% endfor %}
  </tbody>
</table>
{% endblock %}